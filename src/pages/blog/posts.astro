---
import Post from "../../components/Post.astro";
import Layout from "../../layouts/Layout.astro";

interface Post {
  userId: number;
  id: number;
  title: string;
  body: string;
}

const response = await fetch("https://jsonplaceholder.typicode.com/posts");
const posts: Post[] = await response.json();
---

<Layout title="Posts">
  <h1>Posts</h1>
  <a href="/">Home page</a>
  <ul>
    {posts.map((post: Post) => <Post title={post.title} body={post.body} />)}
  </ul>
</Layout>

<style is:inline>
  ul {
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
</style>
